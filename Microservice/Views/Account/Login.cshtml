    <h2>Вход на сайт</h2>
    <hr />
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" method="post">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Введите Email</label>
                <input type="email" asp-for="Email" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label>
                <input type="password" asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <label>
                <input type="checkbox" asp-for="KeepLoggedIn" />
                Keep me logged In.
            </label>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-outline-dark" />
            </div>
            @if (ViewData["ValidateMessage"] != null)
            {
                <br />
                <br />
                <label>@ViewData["ValidateMessage"]</label>
            }
        </div>
    </form>
