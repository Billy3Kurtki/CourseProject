@using static StudentMoodle.Models.LabWork;
@model StudentMoodle.Models.LabWork

@{
    ViewData["Title"] = "CreateLabWork";
}

<h1>CreateLabWork</h1>

<h4>LabWork</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLabWork">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeadLine" class="control-label"></label>
                <input asp-for="DeadLine" class="form-control" />
                <span asp-validation-for="DeadLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                @Html.DropDownList("status", Html.GetEnumSelectList(typeof(Status)))
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manual" class="control-label"></label>
                <input asp-for="Manual" class="form-control" />
                <span asp-validation-for="Manual" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="IdDiscipline" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <input type="button" value="Назад к дисциплине"
           onclick="location.href='@Url.Action("IndexDiscipline", "Discipline", new {id = Model.IdDiscipline})'" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
