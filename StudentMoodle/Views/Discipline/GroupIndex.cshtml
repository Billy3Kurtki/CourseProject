@model (List<Group>, Discipline, Group)

@{
    ViewData["Title"] = "GroupIndex";
    var model1 = Model.Item1;
    var model2 = Model.Item2;
    var model3 = Model.Item3;
}


<h1>Подключение группы к дисциплине @model2.Title</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model3.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model3.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model3.speciality)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in model1) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.speciality)
            </td>
            <td>
                @Html.ActionLink("Подключить", "ConnectGroupDiscipline", new {  idgroup = item.Id, iddiscipline = model2.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
